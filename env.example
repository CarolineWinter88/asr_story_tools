# ==========================================
# AI有声书工具 - 环境配置模板
# ==========================================
# 复制此文件为 .env 并修改配置值

# ==========================================
# 数据库配置
# ==========================================
MYSQL_ROOT_PASSWORD=asr_story_2025
MYSQL_DATABASE=asr_story
MYSQL_USER=asr_user
MYSQL_PASSWORD=asr_pass_2025
MYSQL_PORT=3306

# ==========================================
# 后端配置
# ==========================================
BACKEND_PORT=8000
APP_ENV=production  # development / production
DEBUG=false
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# CORS跨域配置（多个域名用逗号分隔）
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173,http://192.168.1.100

# ==========================================
# 前端配置
# ==========================================
FRONTEND_PORT=80
VITE_API_BASE_URL=http://localhost:8000

# ==========================================
# Nginx配置（生产环境）
# ==========================================
NGINX_PORT=8080

# ==========================================
# TTS引擎配置（按需配置）
# ==========================================
TTS_ENGINE=azure  # azure / aliyun / tencent / baidu

# Azure TTS配置
AZURE_TTS_KEY=your-azure-speech-key
AZURE_TTS_REGION=eastasia

# 阿里云TTS配置
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
ALIYUN_APP_KEY=your-aliyun-app-key

# 腾讯云TTS配置
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key

# 百度TTS配置
BAIDU_API_KEY=your-baidu-api-key
BAIDU_SECRET_KEY=your-baidu-secret-key

# ==========================================
# 文件存储配置
# ==========================================
MAX_UPLOAD_SIZE=100  # MB
ALLOWED_FILE_TYPES=txt,docx,pdf

# ==========================================
# 音频生成配置
# ==========================================
DEFAULT_SAMPLE_RATE=48000
DEFAULT_BITRATE=320  # kbps
DEFAULT_FORMAT=mp3

# ==========================================
# 其他配置
# ==========================================
LOG_LEVEL=INFO  # DEBUG / INFO / WARNING / ERROR
TIMEZONE=Asia/Shanghai

